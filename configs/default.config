server {
    server_name example.com;

    listen 127.0.0.1:8080;
    listen 0.0.0.0:8081;

    root /var/www/html;
    index index.html;
    client_max_body_size 5M;

    error_page 404 /errors/404.html;
    error_page 500 /errors/500.html;

    location / {
        allow_methods GET POST DELETE;
        autoindex off;
    }

    location /files {
        root /data/public;
        autoindex on;
        index index.html;
        allow_methods GET;
    }

    location /old {
        return 301 /files;
    }

    location /upload {
        allow_methods POST;
        upload on;
        upload_store /data/uploads;
    }

    location /cgi-bin {
        allow_methods GET POST;

        root /var/www/cgi-bin;
        index index.py;

        cgi on;
        cgi_exec .py /usr/bin/python3;
        cgi_exec .sh /bin/bash;
    }
}

